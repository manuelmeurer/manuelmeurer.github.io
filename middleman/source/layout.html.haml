!!!

%html

  %head

    %meta{ charset: 'utf-8' }

    %meta{ :'http-equiv' => 'X-UA-Compatible',  content: 'IE=edge,chrome=1' }
    %meta{ :'http-equiv' => 'Content-Type',     content: 'text/html; charset=utf-8' }
    %meta{ :'http-equiv' => 'Content-Language', content: 'en' }

    %meta{ name: 'title',       content: current_page.data.title }
    %meta{ name: 'description', content: current_page.data.description }
    %meta{ name: 'author',      content: 'Manuel Meurer' }
    %meta{ name: 'viewport',    content: 'width=device-width, initial-scale=1' }

    %title
      = current_page.data.title

    %link{ rel: 'canonical', href: config[:host] + current_page.url }

    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Cormorant+Garamond:400,700'
    = stylesheet_link_tag :site

    = partial 'partials/scripts'

  %body
    %main
      = yield
